<h1>Regenerate Password Reset Email</h1>
<form action="/api/users/reset-password/{{token}}" method="post">
  <!-- Agrega los campos necesarios para la solicitud, como el campo de correo electrónico -->
  <label for="email">Correo Electrónico:</label>
  <input type="email" id="email" name="email" required />

  <!-- Agrega el botón de envío -->
  <input
    type="submit"
    value="Enviar Correo de Restablecimiento de Contraseña"
  />
</form>